#!/usr/bin/env python3
import datetime
import subprocess


def main() -> int:
    rev_parse = ('git', 'rev-parse', '--short', 'HEAD')
    revision = subprocess.check_output(rev_parse, text=True).strip()
    print(f'TAG=runner-image:{datetime.date.today()}-{revision}')
    return 0


if __name__ == '__main__':
    exit(main())
